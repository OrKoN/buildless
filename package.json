{
  "name": "buildless",
  "version": "0.0.8",
  "description": "Development HTTP server and deployment tool for static websites",
  "main": "./dist/index.js",
  "scripts": {
    "test": "exit 0",
    "precommit": "npm run compile && lint-staged",
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "http",
    "server",
    "development",
    "static",
    "websites"
  ],
  "author": "Oleksii Rudenko <alexei.rudenko@gmail.com>",
  "license": "MIT",
  "bin": {
    "bls": "./dist/bin/bls.js"
  },
  "devDependencies": {
    "@types/chokidar": "1.7.3",
    "@types/colors": "1.1.3",
    "@types/debug": "0.0.30",
    "@types/glob": "5.0.33",
    "@types/lodash": "4.14.80",
    "@types/memory-fs": "0.3.0",
    "@types/mime": "2.0.0",
    "@types/minimist": "1.2.0",
    "@types/node": "8.0.47",
    "husky": "0.14.3",
    "lint-staged": "4.3.0",
    "prettier": "1.7.4",
    "typescript": "2.5.3"
  },
  "dependencies": {
    "aws-sdk": "2.138.0",
    "chokidar": "1.7.0",
    "colors": "1.1.2",
    "debug": "3.1.0",
    "glob": "7.1.2",
    "memory-fs": "0.4.1",
    "mime": "2.0.3",
    "minimist": "1.2.0"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  }
}
